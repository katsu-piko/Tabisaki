<%= form_with(model: @tweet, local: true) do |f|%>

  <%= render "shared/error_messages", model: f.object %>
  <div class="field">
    <%= f.label :image, "スポット画像" %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :spot, "スポット名(16文字以内)" %><br />
    <%= f.text_field :spot, class: :spot__text %>
  </div>

  <div class="field">
    <%= f.label :comment, "コメント" %><br />
    <%= f.text_area :comment, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :advice, "アドバイス" %><br />
    <%= f.text_area :advice, class: :form__text %>
  </div>

  <div class="field">
    <%= f.label :area_id, "エリア" %><br />
    <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"spot__text"}) %>
  </div>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>